<%= form_for @theme, html: { class: "theme" } do |f| %>

    <% if @theme.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@theme.errors.count, "error") %> prohibited this theme from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @theme.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
    <%= f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control' %>
    <%= f.error_span(:description) %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'form-control', rows: 15 %>
    <%= f.error_span(:content) %>
  </div>


  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              themes_path, :class => 'btn btn-default' %>
  </div>
<% end %>
