<div class="row">
  <%- model_class = Presentation -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <h4>
      <%= link_to t('.new', :default => t("helpers.titles.new", model: model_class.model_name.human.titleize)),
                  new_presentation_path,
                  :class => 'btn btn-primary' %>
    </h4>
  </div>
  <div class="col-md-10">
    <h4>
      <%=t( 'controllers.presentations.explanation').html_safe %>
    </h4>
  </div>
</div>

<%if @presentations.blank? %>
  <h4>
    <%=sprintf(t( 'controllers.presentations.no_presentations'), new_presentation_path).html_safe %>
  </h4>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:published) %></th>
      <!-- <th><%= model_class.human_attribute_name(:user_id) %></th> -->
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @presentations.each do |presentation| %>
      <tr>
        <!-- <td><%= link_to presentation.id, presentation_path(presentation) %></td> -->
        <td><%= link_to presentation.name, presentation_path(presentation) %></td>
        <td><%= presentation.published %></td>
        <!-- <td><%= presentation.user_id %></td> -->
        <td><%=l presentation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_presentation_path(presentation), :class => 'btn btn-default btn-xs' %>
          <% if policy(presentation).push? %>
            <%= link_to t('.push', :default => t("helpers.links.push")),
                        push_presentation_path(presentation), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      presentation_path(presentation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
