<div class="page-header">
  <h1><%=t 'controllers.settings.edit.title' %> <small><%=t 'controllers.settings.edit.hint' %></small></h1>
</div>
<%= form_tag url_for('global_settings'), method: :post, class: "user form-horizontal" do %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<div class="checkbox">
			<label>
		      <%= check_box_tag :interactive_mode, "1", interactive_mode? %>
			  <%= t('controllers.settings.interactive_mode') %>
			</label>
		</div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag t('helpers.links.save'), class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            logged_in_home_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
